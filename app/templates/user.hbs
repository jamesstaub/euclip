<NavBar @logoWidth="180px">
  {{#if this.session.isAuthenticated}}
    <DropdownMenu
        @offsetX={{-10}}
        @offsetY={{20}}
        @items={{array 
          (hash label="logout" select=(action "invalidateSession")) 
        }}
      >
        <span class="white mh2">{{this.currentUser.user.username}}</span>
      </DropdownMenu>
  {{else}}
    <LinkTo class="yellow" @route="login">login</LinkTo>
  {{/if}}
</NavBar>

{{outlet}}