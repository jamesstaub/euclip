<div class="mv1 pointer" ...attributes {{on "click" @selectActiveTrack}}>
  <div class="flex relative justify-between {{if @isActive "bg-dark-blue" "bg-dark-gray"}}">
    
    {{yield}}

    {{#if @track.sequence}}
      <TrackSequencer 
        @sequence={{@track.sequence}}
        @stepIndex={{@track.stepIndex}}
        @onClickStep={{fn this.updateTrackSequence}}
      />
    {{/if}}
    <DropdownMenu 
      class="h-100 flex-grow"
      @items={{array 
        (hash label="delete" select=(fn this.deleteTrack)) 
      }}
    />
  </div>
</div>