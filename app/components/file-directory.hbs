<div class="relative pt4 min-width-12" {{did-insert (fn this.setSelectedPath)}}>
  <h3 class="f5 absolute black top-0 w-100 bg-white pl3">
    {{if (eq @directory.type "audio") "Sounds" "Drum Machine"}}
  </h3>
  <ul class="directory-wrapper list ph0 mt0">
    {{#each @directory.choices as |choice|}}
      <li class="{{if (eq choice this.selected) "selected"}}" {{did-update (fn this.scrollIntoView (eq choice this.selected))}}>
        <button class="pl3" {{action @onSelect @directory choice}}>
          {{#if (eq @directory.type "audio")}}
            {{filename-ui choice}}
          {{else}}
            {{choice}}
          {{/if}}
        </button>
      </li>
    {{/each}}
  </ul>
</div>