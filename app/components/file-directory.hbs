<div class="relative pt4 min-width-12">
  <h3 class="absolute black top-0 w-100 bg-white pl3">
    {{if (eq this.directory.type "audio") "Sounds" "Drum Machine"}}
  </h3>
  <ul class="directory-wrapper list ph0 mt0">
    {{#each this.directory.choices as |choice|}}
      <li class="{{if (eq choice this.selected) "selected"}}">
        <button class="pl3" {{action "onSelect" this.directory choice}}>
          {{#if (eq this.directory.type "audio")}}
            {{filename-ui choice}}
          {{else}}
            {{choice}}
          {{/if}}
        </button>
      </li>
    {{/each}}
  </ul>
</div>