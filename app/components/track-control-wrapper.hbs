<div class="track-control-wrapper flex br bw1 {{if this.showConfig "pr2 b--dark-gray" "b--yellow"}}" ...attributes>
  <div class="relative {{if this.isConfigurable "pr3"}}">
    <div class="{{@wrapperStyleClass}}" style={{if @trackControl.isMultislider multisliderWidthStyle}} data-node-uuid={{@trackControl.trackNode.nodeUUID}}>
      {{yield multisliderWidth}}
      
      <label class="tc mt3 dib">
        {{@trackControl.nodeAttr}} 
      </label>
    </div>
    {{#if this.isConfigurable}}
      <button class="toggle-config bg-transparent pa0 bn absolute right-0 top-0 mt1 overflow-hidden" {{on "click" this.toggleConfig}}>
        {{svg-jar "fi-play" class=(concat "dark-fill " (if this.showConfig "rotate-0" "rotate-90"))  width="16px" height="40px"}}
      </button>
    {{/if}}
  </div>

  {{#if this.isConfigurable}}
    {{#if this.showConfig}}
      <div class="ph1">
        <h5 class="ma1">Control Range</h5>
        <div class="ml1 flex flex-column justify-between mb4">
          <NexusNumber 
            @label="max"
            @value={{@trackControl.max}} 
            @onChangeNumber={{fn this.setParam "max"}}
            @min={{-20000}}
            @max={{20000}}
            @step={{0.25}}
          />
          <NexusNumber 
            @label="min" 
            @value={{@trackControl.min}} 
            @onChangeNumber={{fn this.setParam "min"}}
            @min={{-20000}}
            @max={{20000}}
            @step={{0.25}}
          />
          <NexusNumber 
            @label="default" 
            @value={{@trackControl.defaultValue}} 
            @onChangeNumber={{fn this.setParam "defaultValue"}}
            @min={{-20000}}
            @max={{20000}}
            @step={{0.25}}
          />
          <button class="f7 pa1 ba bw1 b--dark-gray bg-yellow" {{on "click" this.setDefault}}>set default</button>
        </div>
      </div>
    {{/if}}
  {{/if}}

  {{#unless @hideInterfaceMenu}}
    {{#if showConfig}}
      <div class="ph1 ml2">
        <h5 class="ma1">Type</h5>
        <div class="mv3">
          <NexusSelect
            @value={{@trackControl.interfaceName}}
            @selectOptions={{@trackControl.interfaceNamesForAttr}}
            @onChangeValue={{fn this.changeInterfaceName}}
          />
        </div>
      </div>
    {{/if}}
  {{/unless}}
</div>