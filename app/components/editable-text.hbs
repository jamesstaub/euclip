<form class="project-form flex items-end" {{on 'submit' this.save}}>
  {{#if this.isEditing}}
    <div>
      <label class="flex f7 flex-column">
        {{@label}}
        <Input
          autofocus={{true}}
          class="project-input f4"
          name={{@key}}
          placeholder="Enter a Project Title"
          {{on 'keydown' this.onKey}}
          @value={{@value}}
          aria-label="Project Title"
        />
      </label>
    </div>
  {{else}}
    <button
      class="project-button bg-transparent bn"
      type="button"
      {{on 'click' this.toggleEdit}}
      aria-label="Edit Project"
    >
      <p ...attributes>{{@value}}</p>
    </button>
  {{/if}}

  {{#if this.isEditing}}
    <div class="flex">
      <button
        class="bg-transparent ml1 mb1 bn"
        type="button"
        {{on 'click' this.save}}
        aria-label="Save Changes"
      >âœ”</button>

      <IconButton 
        class="bg-transparent ml1 mb1 bn"
        type="button"
        {{on 'click' this.toggleEdit}}
        aria-label="Cancel Editing"
        @icon="fi-cancel" {{on "click" @onCloseSidebar}} 
      />
    </div>
  {{/if}}
</form>
