<Controls::NumberBox
  class="slider-number center"
  @value={{@value}}
  @min={{@min}}
  @onChange={{@onChange}}
/>

<div
  class='mh3 center'
  {{nexus-ui
    'Slider'
    min=@min
    max=@max
    value=@value
    onChange=@onChange
    step=@stepSize
    size=(array 20 110)
  }}
></div>

{{#if (not (eq @value @transformedValue))}}
  <span class="f7 dark-gray">{{@transformedValue}}</span>
{{/if}}