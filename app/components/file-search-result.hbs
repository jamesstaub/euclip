<ListItem 
  @selected={{@selected}} 
  {{did-insert this.renderParts}} 
  ...attributes
>
  <ListItemLink {{on "click" @onSelect}}>
    {{#each this.parentDirs as |dir|}}
      {{dir}} /
    {{/each}}

    {{#if this.file}}
      {{filename-ui this.file}}
    {{/if}}
  </ListItemLink>

</ListItem>
