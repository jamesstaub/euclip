<ListItem 
  @selected={{@selected}} 
  {{did-insert this.renderParts}} 
  ...attributes
>
  <DirectoryItemLink {{on "click" (fn @onSelect)}}>
    {{#each parentDirs as |dir|}}
      {{dir}} /
    {{/each}}

    {{#if file}}
      {{filename-ui file}}
    {{/if}}
  </DirectoryItemLink>

</ListItem>
