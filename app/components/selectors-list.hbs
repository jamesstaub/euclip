<div class="selector-docs overflow-scroll">
  <table>
    <tbody>
      <tr>
        {{#if this.idSelector}}
        <td>
          <h4 class="mv0">id</h4>
        </td>
        <td>
          <span class="code mv1 bg-near-black pa1 f7">{{this.idSelector.name}}</span>
        </td>
        <td>
          Selects a single node. An ID should never get defined on more than one node.
        </td>
        {{/if}}
      </tr>
      <tr>
        <td>
          <h4 class="mv0">class</h4>
        </td>
        <td>
          {{#each this.classSelectors as |s|}}
          {{#if (eq s.type "class")}}
          <span class="code db min-w-3 mv1 bg-near-black pa1 f7">{{s.name}}</span>
          {{/if}}
          {{/each}}
        </td>
        <td>
          Selects any node with this class. Useful for selecting nodes within a track.
        </td>
      </tr>
      <tr>
        {{#if this.elementSelector}}
        <td class="min-w-4">
          <h4 class="mv0">node type</h4>
        </td>
        <td>
          <span class="code db mv1 bg-near-black pa1 f7">{{this.elementSelector.name}}</span>
        </td>
        <td>
          Selects any node of this type across all tracks.
        </td>
        {{/if}}
      </tr>
    </tbody>
  </table>

  <p></p>
</div>