{{#if @onToggleFilePicker}}
  <ButtonPrimary
    class="ba w4 f7 bg-dark-gray truncate ma2 {{if @samplerFilepathControl.filename "yellow b--yellow " "white b--white "}}"
    {{on "click"  @onToggleFilePicker}}
    @restyle={{true}}
    @label="Open Audio File Browser. Current Selection: {{@samplerFilepathControl.filename}}"
    ...attributes
  >
    {{if @samplerFilepathControl.filename @samplerFilepathControl.filename "Pick a Sound"}}
  </ButtonPrimary>
{{/if}}